@page "{id:int}"
@model CarRepairShopRP.Pages.ReplacedParts.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add</h1>

<h4>New Replaced Part to Repair Number @Html.DisplayFor(model => model.RepairID)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReplacedPart.Name" class="control-label"></label>
                <input asp-for="ReplacedPart.Name" class="form-control" />
                <span asp-validation-for="ReplacedPart.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReplacedPart.Manufacturer" class="control-label"></label>
                <input asp-for="ReplacedPart.Manufacturer" class="form-control" />
                <span asp-validation-for="ReplacedPart.Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReplacedPart.ProductionDate" class="control-label"></label>
                @Html.TextBoxFor(model => model.ReplacedPart.ProductionDate, new { type = "month", @class = "form-control" })
                <span asp-validation-for="ReplacedPart.ProductionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReplacedPart.Quantity" class="control-label"></label>
                <input asp-for="ReplacedPart.Quantity" class="form-control" />
                <span asp-validation-for="ReplacedPart.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReplacedPart.Price" class="control-label"></label>
                <input asp-for="ReplacedPart.Price" class="form-control" />
                <span asp-validation-for="ReplacedPart.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Bill file</label>
                <small class="text-muted">* You can upload any image or pdf/doc</small>
                <input asp-for="ReplacedPart.NewPartBill.File" accept="image/*" />
                <span asp-validation-for="ReplacedPart.NewPartBill.File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReplacedPart.OldPartImage" class="control-label"></label>
                <input asp-for="ReplacedPart.OldPartImage.Title" class="form-control" />
                <span asp-validation-for="ReplacedPart.OldPartImage.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Old Part Image</label>
                <input asp-for="ReplacedPart.OldPartImage.File" accept="image/*" />
                <span asp-validation-for="ReplacedPart.OldPartImage.File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Repairs/Index" asp-route-id="@Model.RepairID">Back to Repairs</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/CustomValidation.js"></script>
}
