@page
@model CarRepairShopRP.Pages.Visits.CreateModel

@{
    ViewData["Title"] = "Schedule Visit";
}

<h1>Schedule</h1>

<h4>Visit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Visit.VisitPurpose" class="control-label"></label>
                <textarea asp-for="Visit.VisitPurpose" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Visit.VisitPurpose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visit.PlannedVisitDate" class="control-label"></label>
                <input asp-for="Visit.PlannedVisitDate" class="form-control" />
                <span asp-validation-for="Visit.PlannedVisitDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Schedule" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to Visits</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
